<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEDE7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="8dp"
        android:background="#FF9E80">

        <ImageView
            android:id="@+id/im_l"
            android:layout_width="50dp"
            android:layout_marginTop="8dp"
            android:layout_height="50dp"
            android:background="#B1B1B1"
            android:src="@drawable/event_logo"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_toEndOf="@+id/im_l"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="Event Management "
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="#D6DFE0"
        android:layout_margin="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="#B1B1B1"
                android:layout_weight="3"
                android:scaleType="centerCrop"

                android:src="@drawable/event_logo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="8">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFF"
                    android:text="manage your upcoming event!! "
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFF"
                    android:text="easily manage any event!!"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="1" />


            </LinearLayout>



        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginTop="40dp"

            >
        <TextView
            android:id="@+id/Event_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FBE89D"
            android:text="Create Event"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginTop="30dp"

            >

            <TextView
                android:id="@+id/UpcomingEvent_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FBE89D"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="2dp"
                android:text="Up Coming Events"
                android:layout_weight="1" />

</TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginTop="30dp">

            <TextView
                android:text="Sign up"
                android:id="@+id/Createsignup_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FBE89D"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_margin="2dp"
                android:layout_weight="1" />
</TableRow>

    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="8dp"
        android:layout_weight="0.3"
        android:background="#FFD180">

        <Button
            android:id="@+id/exxit_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:text="Exit"
            android:textSize="15sp"
            android:textStyle="bold"
            android:backgroundTint="#FF9E80" />

        <Button
            android:id="@+id/upcoming_home_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Upcoming Event"
            android:textStyle="bold"
            android:textSize="15sp"
            android:backgroundTint="#FF9E80" />

        <Button
            android:id="@+id/logout_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:text="Log out"
            android:textStyle="bold"
            android:textSize="15sp"

            android:backgroundTint="#FF9E80" />

    </LinearLayout>

</LinearLayout>