<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F7F3">

    <TextView
        android:id="@+id/up_coming_event_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:text="Upcoming Event"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="#ECDA40"
        android:textStyle="bold">

    </TextView>

    <ListView
        android:id="@+id/lvevent_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="8dp"
        android:layout_weight="0.2"
        android:background="#ECDA40">

        <Button
            android:id="@+id/create_new_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:text="Create New"
            android:textSize="15sp"
            android:backgroundTint="#ECDA40"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/history_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:backgroundTint="#ECDA40"
            android:text="Home"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/exit_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:text="Exit"
            android:textSize="15sp"
            android:backgroundTint="#ECDA40"
            android:textColor="@color/black" />

    </LinearLayout>



</LinearLayout>